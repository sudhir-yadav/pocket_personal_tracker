/**
 *  Author    : Sudhir Yadav 
 *  Date      : 15 Jan 2020
 *  Purpose   : To learn browser extension development / Automate daily work style.  
 *  Dev Links : - https://developer.chrome.com/extensions          ( Extension main page )
                - https://developer.chrome.com/extensions/manifest ( Extension manifest details  )
                - https://developer.chrome.com/extensions/samples  ( Sample extension )
**/
{
  // Manifest Version v2 - https://developer.chrome.com/extensions/manifest/manifest_version 
  "manifest_version" : 2,
  // Extension Name - https://developer.chrome.com/extensions/manifest/name#name
  "name"             : "Pocket Personal Tracker",
  // Extension Version Number - https://developer.chrome.com/extensions/manifest/version
  "version"          : "1.0.1",
  // Extension Version Name - https://developer.chrome.com/extensions/manifest/version#version_name
  "version_name"     : "1.0 beta",
  // To uncomment when adding _locale dir -  https://developer.chrome.com/extensions/manifest/default_locale
  //"default_locale"   : "en",
  // Extension description / purpose. - https://developer.chrome.com/extensions/manifest/description
  "description"      : "Personal application", 
  // Default extension icons. - https://developer.chrome.com/extensions/manifest/icons
  "icons"            : {
      "16"  : "./icons/icon16.png",                     
      "48"  : "./icons/icon48.png",
      "32"  : "./icons/icon32.png",
      "128" : "./icons/icon128.png"
  },
  // https://developer.chrome.com/extensions/browserAction
  "browser_action"   : {
      "default_icon"  : {
          "16"  : "./icons/icon16.png",                     
          "48"  : "./icons/icon48.png",
          "32"  : "./icons/icon32.png",
          "128" : "./icons/icon128.png"
      },
      "default_popup" : "index.html",
      "default_title" : "Sudhir's Personal application"
  },
  "content_scripts" : [
    {
      "matches": [ "<all_urls>" ],
      "css": ["/static/css/app.css", "/static/css/content.css"],
      "js": ["/static/js/0.chunk.js", "/static/js/content.js"]
    }
 ],
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}
